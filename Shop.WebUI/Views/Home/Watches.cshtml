@model Shop.Core.ViewModels.WatchListViewModel
@{
    ViewBag.Title = "Watches";
}


<section id="products" class="products py-5">
    <div class="container">
        <div class="row">
            <div class="col-10 mx-auto col-sm-6 text-center">
                <h1 class="text-capitalize product-title">
                    Watches
                </h1>
                <div class="">
                    <h5 class="title-color">Filter by brand:</h5>
                    <div class="form-group">
                        @Html.ActionLink("All", "Watches", null, new { @class = Request["Brand"] == null ? "list-group-item active " : "list-group-item",  style = Request["Brand"] == null ? "background-color: grey; color: white; border-color:black;" : "color:black"})
                        @foreach (var brand in Model.Brands)
                        {
                            @Html.ActionLink(brand.Name, "Watches", new { brand = brand.Name }, new { @class = Request["Brand"] == brand.Name ? "list-group-item active" : "list-group-item", style = Request["Brand"] == brand.Name ? "background-color: grey; color: white; border-color:black;" : "color:black"})
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="product-items row" id="product-items">
            @foreach (var item in Model.Watches)
            {
                <div class="col-10 col-sm-6 col-lg-4 mx-auto my-3 card-group">
                    <div class="card single-item h-100 w-100">
                        <div class="img-container" >
                            <img class="card-img-top product-img" alt="" src="~/Content/ProductImages/@item.Image" />
                        </div>
                        <div class="card-body">
                            <div class="card-text d-flex justify-content-between text-capitalize">
                                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
                                <span>
                                    <i class="fas fa-euro-sign"></i>
                                    @item.Price
                                </span>
                            </div>
                            <div class="card-footer">
                                <a href="@Url.Action("AddToCart", "Cart", new {Id = item.Id})" class="btn-dark btn btn-color marg-auto-dp-block">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


















